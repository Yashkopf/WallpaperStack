<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WallpaperStack" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.WallpaperStack" parent="Base.Theme.WallpaperStack" >
        <item name="android:windowBackground">@color/home_background</item>
    </style>

<!--    <style name="TransparentTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
<!--        <item name="android:windowBackground">@android:color/transparent</item>-->
<!--    </style>-->

    <style name="Sorted.Button" parent="Widget.AppCompat.TextView">
        <item name="android:textSize"> 16sp </item>
        <item name="android:gravity"> center </item>
        <item name="android:textColor">@color/white</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="background">@drawable/rounded_corner</item>
        <item name="android:backgroundTint">@color/default_button_state</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryHint">@string/search_hint</item>
        <item name="android:textColorHint">#6B6B6B</item>
        <item name="android:textColorPrimary">#CACACA</item>
        <item name="android:tint">#43646A</item>
    </style>

    <style name="ShapeAppearanceOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item> <!-- Adjust as needed -->
    </style>

</resources>