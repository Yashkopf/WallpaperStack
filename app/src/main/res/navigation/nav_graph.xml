<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.wallpaperstack.presentation.features.home_screen.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.wallpaperstack.presentation.features.detail_screen.DetailFragment"
        android:label="DetailFragment">
    </fragment>
    <fragment
        android:id="@+id/bottomSheetFragment"
        android:name="com.example.wallpaperstack.presentation.features.bottom_sheet_details.BottomSheetDetailsFragment"
        android:label="BottomSheetFragment" />
</navigation>